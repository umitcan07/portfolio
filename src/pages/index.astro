---
import Card from "../components/Card.astro";
import Icon from "../components/Icon.astro";
import {
  education,
  experiences,
  extracurriculars,
  personal,
} from "../data/content";
import Layout from "../layouts/Layout.astro";
---

<Layout title="Portfolio" />
<main
  class="container mx-auto max-w-screen-sm md:pt-20 pt-12 pb-20 gap-10 flex flex-col"
>
  <section class="gap-2 px-4">
    <img
      class="rounded-full w-16 h-16 mb-3"
      src="/img.jpeg"
      alt="Umit Can Evleksiz"
    />
    <h1 class="text-2xl text-slate-800 dark:text-slate-200">
      Hey! I'm Ãœmit Can.
    </h1>
    <p
      class="text-md font-normal text-slate-500 dark:text-slate-600 mt-2 text-balance"
    >
      I'm a product engineer & senior computer engineering student, passionate
      about blending engineering and design methodologies to create impactful
      web experiences.
    </p>
  </section>
  <hr class="border-slate-300 dark:border-slate-900" />
  <section class="flex flex-col gap-6 px-4">
    <div
      class="flex gap-3 items-center leading-6 text-lg text-slate-500 dark:text-slate-400"
    >
      <Icon name="experience" />
      <h2 class="mt-1">Experience</h2>
    </div>
    <div class="flex flex-col gap-4">
      {experiences.map((item) => <Card {...item} />)}
    </div>
  </section>
  <section class="flex flex-col gap-6 px-4">
    <div
      class="flex gap-3 items-center leading-6 text-lg text-slate-500 dark:text-slate-400"
    >
      <Icon name="extracurricular" />
      <h2 class="mt-1">Extracurricular</h2>
    </div>
    <div class="flex flex-col gap-4">
      {extracurriculars.map((item) => <Card {...item} />)}
    </div>
  </section>
  <section class="flex flex-col gap-6 px-4">
    <div
      class="flex gap-3 items-center leading-6 text-lg text-slate-500 dark:text-slate-400"
    >
      <Icon name="education" />
      <h2 class="mt-1">Education</h2>
    </div>
    <div class="flex flex-col gap-4">
      {education.map((item) => <Card {...item} />)}
    </div>
  </section>
  <section class="flex flex-col gap-6 px-4">
    <div
      class="flex gap-3 items-center leading-6 text-lg text-slate-500 dark:text-slate-400"
    >
      <Icon name="personal" />
      <h2 class="mt-1">Personal</h2>
    </div>
    <div class="flex flex-col gap-4">
      {personal.map((item) => <Card {...item} />)}
    </div>
  </section>
  <section class="flex flex-col gap-6 px-4">
    <div
      class="flex gap-3 items-center leading-6 text-lg text-slate-500 dark:text-slate-400"
    >
      <Icon name="contact" />
      <h2 class="mt-1">Contact</h2>
    </div>
    <div
      class="flex flex-col items-start gap-4 text-md text-slate-950 dark:text-slate-200 text-sm"
    >
      <a
        href="mailto:evleksizumitcan@gmail.com"
        target="_blank"
        class="hover:underline underline-offset-2 hover:text-cyan-700 dark:hover:text-cyan-400"
      >
        evleksizumitcan@gmail.com
      </a>
      <a
        href="https://github.com/umitcan07"
        target="_blank"
        class="hover:underline underline-offset-2 hover:text-cyan-700 dark:hover:text-cyan-400"
      >
        Github
      </a>
      <a
        href="https://www.linkedin.com/in/umitcanevleksiz/"
        target="_blank"
        class="hover:underline underline-offset-2 hover:text-cyan-700 dark:hover:text-cyan-400"
      >
        LinkedIn
      </a>
      <a
        href="https://x.com/umitcan07"
        target="_blank"
        class="hover:underline underline-offset-2 hover:text-cyan-700 dark:hover:text-cyan-400"
      >
        X
      </a>
      <a
        href="https://www.youtube.com/channel/UCQUQ71kGjbJtvP-9Ji_Ks9A"
        target="_blank"
        class="hover:underline underline-offset-2 hover:text-cyan-700 dark:hover:text-cyan-400"
      >
        YouTube
      </a>
      <a
        href="https://www.instagram.com/umitcan07/"
        target="_blank"
        class="hover:underline underline-offset-2 hover:text-cyan-700 dark:hover:text-cyan-400"
      >
        Instagram
      </a>
    </div>
  </section>
</main>
